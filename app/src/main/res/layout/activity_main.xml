<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckBox
        android:id="@+id/P1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/perfectUnison"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Select1" />

    <CheckBox
        android:id="@+id/m2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/minorSecond"
        android:buttonTint="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/M2"
        app:layout_constraintStart_toEndOf="@+id/P1"
        app:layout_constraintTop_toBottomOf="@+id/Select1" />

    <CheckBox
        android:id="@+id/M2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/majorSecond"
        android:buttonTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Select1" />

    <CheckBox
        android:id="@+id/m3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/minorThird"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/P1"
        app:layout_constraintTop_toBottomOf="@+id/P1" />

    <CheckBox
        android:id="@+id/M3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/majorThird"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/m2"
        app:layout_constraintTop_toBottomOf="@+id/m2" />

    <CheckBox
        android:id="@+id/P4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/perfectFourth"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/M2"
        app:layout_constraintTop_toBottomOf="@+id/M2" />

    <CheckBox
        android:id="@+id/P5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/perfectFifth"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/m3"
        app:layout_constraintTop_toBottomOf="@+id/m3" />

    <CheckBox
        android:id="@+id/m6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/minorSixth"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/M3"
        app:layout_constraintTop_toBottomOf="@+id/M3" />

    <CheckBox
        android:id="@+id/M6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/majorSixth"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/P4"
        app:layout_constraintTop_toBottomOf="@+id/P4" />

    <CheckBox
        android:id="@+id/m7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/minorSeventh"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/P5"
        app:layout_constraintTop_toBottomOf="@+id/P5" />

    <CheckBox
        android:id="@+id/M7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/majorSeventh"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/m6"
        app:layout_constraintTop_toBottomOf="@+id/m6" />

    <CheckBox
        android:id="@+id/P8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/perfectOctave"
        android:buttonTint="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/M6"
        app:layout_constraintTop_toBottomOf="@+id/M6" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="play"
        android:text="@string/play_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Select1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/intervalPrompt"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>